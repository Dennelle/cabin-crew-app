<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Cabin Crew</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <style>
    body,h1,h2,h3,h4,h5,h6 {font-family: "Raleway", Arial, Helvetica, sans-serif}
    </style>
</head>

<form class= "container" id="new-form" action="/travels" method="POST">
  <h2>Create Travel Diary Entry</h2>
  <br>
  <label>Country:</label>
  <input class="form-control" rows="1" id="comment" type="text" name="country">
  <br>
  <label>City:</label>
  <input class="form-control" rows="1" id="comment" type="text" name="city">
  <br>
  <label>Date Visited:</label>
  <input class="form-control" rows="1" id="comment" type="date" name="dateVisited">
  <br>
  <label>Date Returned:</label>
  <input class="form-control" rows="1" id="comment" type="date" name="dateReturned">
  <br>
  <label>Most Memorable Moments:</label>
  <br>
  <textarea class="form-control" rows="5" id="comment" name="memorableMoments" rows="4" cols="50">Tell us your 3 M's</textarea>
  <br>
  <label>Lessons Learned:</label>
  <br>
  <textarea class="form-control" rows="5" id="comment" name="lessonsLearned" rows="4" cols="50">What would you do differently?</textarea>
  <br>
  <label>Advice:</label>
  <br>
  <textarea class="form-control" rows="5" id="comment" name="advice" rows="4" cols="50">What advice would you give other parents?</textarea>
  <br>
  <label>Number of Children:</label>
  <input class="form-control" rows="1" id="comment" type="number" name="noChildren">
  <br>
  <label>Age of Children:</label>
  <input class="form-control" rows="1" id="comment" type="text" name="ageChildren">
  <br>
  <label>Kid Friendly Rating</label>
  <select class="form-control" rows="1" name="kidFriendlyRating">
    <option value="G">G</option>
    <option value="PG">PG</option>
    <option value="PG-13">PG-13</option>
    <option value="R">R</option>
  </select>
  <br>
  <label>Would Go Again?:</label>
  <select class="form-control" rows="1" name="futureVisit">
    <option value ="Yes">Yes</option>
    <option value ="No">No</option>
    <option value="Undecided">Undecided</option>
    <br>
  </select>
  <button type="Submit" button type="button" class="btn btn-info">Submit</button>
</form>

<%- include('../partials/footer') %>
