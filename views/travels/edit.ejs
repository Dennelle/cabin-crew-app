<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Cabin Crew</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <style>
    body,h1,h2,h3,h4,h5,h6 {font-family: "Raleway", Arial, Helvetica, sans-serif}
    </style>
</head>
<!-- ============ user will use this form to to update using the post method, which is similar to the delete method ========================= -->
<!-- ============ the form will pull the data from travel document in the controller function ======================== -->
<form class= "container" action="/travels/<%= travel._id %>?_method=PUT" method="POST">
    <h2>Edit Your Journey Here:</h2>
    <label>Country:</label>
    <br>
    <textarea class="form-control" rows="1" id="comment" name="country" ><%= travel.country %></textarea>
    <br>
    <label>City:</label>
    <br>
    <textarea class="form-control" rows="1" id="comment" name="city"><%= travel.city %></textarea>
    <br>
    <label>Date Visited:</label>
    <input class="form-control" rows="1" id="comment" type="datetime-local" name="dateVisited" value="<%= travel.dateVisited.toISOString().slice(0,16) %>">
    <br>
    <label>Date Returned:</label>
    <input class="form-control" rows="1" id="comment" type="datetime-local" name="dateReturned" value="<%= travel.dateReturned.toISOString().slice(0,16) %>">
    <br>
    <br>
    <label>Most Memorable Moments:</label>
    <textarea class="form-control" rows="5" id="comment" name="memorableMoments"><%= travel.memorableMoments %></textarea>
    <br>
    <label>Lessons Learned:</label>
    <textarea class="form-control" rows="5" id="comment" name="lessonsLearned"><%= travel.lessonsLearned %></textarea>
    <br>
    <label>Advice:</label>
    <textarea class="form-control" rows="5" id="comment" name="advice"><%= travel.advice %></textarea>
    <br>
    <label>Number of Children:</label>
    <textarea type="number" class="form-control" rows="1" id="comment" name="noChildren"><%= travel.noChildren %></textarea>
    <br>
    <label>Age of Children:</label>
    <textarea type="text" class="form-control" rows="1" id="comment" name="ageChildren"><%= travel.ageChildren %></textarea>
    <br>
    <label for="kidFriendlyRating">Select Kid Friendly Rating:</label>
    <select class="form-control" rows="1" id="kidFriendlyRating" name="kidFriendlyRating">
      <option value ='G'>G</option>
      <option value ='PG'>PG</option>
      <option value ='PG-13'>PG-13</option>
      <option value ='R'>R</option>
    </select>
    <br>
    <button type="Submit" button type="button" class="btn btn-info">Update</button>
</form>
<%- include('../partials/footer') %>
